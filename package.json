{
  "name": "sullivan-scott",
  "version": "1.0.0",
  "description": "scott sullivan information website",
  "private": true,
  "main": "server.js",
  "scripts": {
    "--------- START ------------------------------": "",
    "start": "yarn copy:assets && NODE_ENV=development webpack-dev-server --open",
    "start:prod": "NODE_ENV=production yarn build && yarn serve",
    "build": "webpack && yarn copy:assets",
    "build:prod": "NODE_ENV=production  webpack && yarn copy:assets",
    "serve": "node ./server.js",
    "--------- LINTING ----------------------------": "",
    "lint": "yarn lint:scss && yarn lint:js",
    "lint:scss": "stylelint 'src/**.scss' --ignore-path .eslintignore",
    "lint:js": "eslint --ext .jsx --ext .js src/ cypress/",
    "prettier": "prettier --write \"**/*.{json,md,js,jsx,css,scss}\"",
    "prettier:diff": "prettier --list-different \"**/*.{json,md,js,jsx,css,scss}\"",
    "--------- BUNDLE CHECKS ----------------------": "",
    "bundle:size": "NODE_ENV=production yarn build && bundlesize",
    "bundle:budget": "yarn build && start-server-and-test serve http-get://localhost:3001/ bundle:budget:run",
    "bundle:budget:run": "yarn lighthouse http://localhost:3001/ --budget-path=config/performance/lighthouse-budgets.json --output-path=reports/lighthouse-results.html --view",
    "--------- UNIT TESTS ------------------------------": "",
    "test:unit": "jest --coverage --config ./config/jest/jest.config.js",
    "test:unit:watch": "jest --coverage --watch --config ./config/jest/jest.config.js",
    "--------- E2E TESTS ------------------------------": "",
    "test:e2e": "NODE_ENV=development yarn build && start-server-and-test serve http-get://localhost:3001/ cypress:open",
    "test:e2e:run": "NODE_ENV=development yarn build && start-server-and-test serve http-get://localhost:3001/ cypress:run",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "--------- HELPERS ----------------------------": "",
    "check:status": "node -e 'require(\"./config/helpers/nodeScripts\").statusCheck()' && node -e 'require(\"./config/helpers/nodeScripts\").branchCheck()'",
    "copy:assets": "node -e 'require(\"./config/helpers/nodeScripts\").moveAssets()'",
    "nuke": "yarn cache clean && yarn global add rimraf && rimraf node_modules && yarn && yarn run clean"
  },
  "lint-staged": {
    "*.{js,jsx,css,md}": [
      "yarn prettier",
      "yarn lint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn check:status && yarn test:unit --silent && yarn bundle:size && yarn test:e2e:run"
    }
  },
  "engines": {
    "node": ">=10",
    "npm": ">=5"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express-static-gzip": "^1.1.3",
    "framer-motion": "^1.6.2",
    "lodash.throttle": "^4.1.1",
    "prop-types": "15.7.2",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "source-map-loader": "^0.2.4",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/plugin-proposal-decorators": "7.4.4",
    "@babel/plugin-proposal-export-namespace-from": "7.2.0",
    "@babel/plugin-proposal-function-sent": "7.2.0",
    "@babel/plugin-proposal-json-strings": "7.2.0",
    "@babel/plugin-proposal-numeric-separator": "7.2.0",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-proposal-throw-expressions": "7.2.0",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/plugin-syntax-import-meta": "7.2.0",
    "@babel/plugin-transform-runtime": "7.4.4",
    "@babel/plugin-transform-typescript": "^7.5.5",
    "@babel/polyfill": "7.4.4",
    "@babel/preset-env": "7.4.5",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "^7.3.2",
    "@babel/register": "7.4.4",
    "@babel/runtime": "7.4.5",
    "@types/jest": "^24.0.17",
    "@types/react": "^16.9.1",
    "@types/react-dom": "^16.8.5",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.2",
    "babel-jest": "24.8.0",
    "babel-loader": "8.0.6",
    "bundlesize": "^0.18.0",
    "chalk": "^2.4.2",
    "clean-webpack-plugin": "^3.0.0",
    "colors": "^1.3.3",
    "compression-webpack-plugin": "^3.0.0",
    "connect-history-api-fallback": "1.6.0",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "3.0.0",
    "cypress": "^3.4.1",
    "cypress-axe": "^0.5.1",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-cypress": "^2.6.1",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "22.7.1",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "express": "^4.17.1",
    "file-loader": "4.0.0",
    "git-branch": "^2.0.1",
    "html-webpack-change-assets-extension-plugin": "^1.2.0",
    "html-webpack-plugin": "3.2.0",
    "husky": "^1.2.0",
    "jest": "24.8.0",
    "jest-css-modules-transform": "^2.5.0",
    "jest-enzyme": "7.0.2",
    "jest-fetch-mock": "2.1.2",
    "jsdom": "15.1.1",
    "koa-connect": "2.0.1",
    "lighthouse": "^5.2.0",
    "lint-staged": "9.0.0",
    "mini-css-extract-plugin": "0.7.0",
    "node-sass": "4.12.0",
    "npm-check-updates": "3.1.13",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "prettier": "1.18.2",
    "react-hot-loader": "4.12.0",
    "sass-loader": "7.1.0",
    "script-ext-html-webpack-plugin": "2.1.3",
    "shelljs": "^0.8.3",
    "start-server-and-test": "^1.10.0",
    "style-loader": "0.23.1",
    "terser-webpack-plugin": "1.3.0",
    "ts-jest": "^24.0.2",
    "webpack": "^4.39.2",
    "webpack-bundle-analyzer": "^3.4.1",
    "webpack-cli": "3.3.5",
    "webpack-dev-server": "3.7.2",
    "webpack-merge": "4.2.1"
  },
  "bundlesize": [
    {
      "path": "./build/js/main.*.js",
      "maxSize": "5 kB"
    },
    {
      "path": "./build/js/vendors.*.js",
      "maxSize": "24 kB"
    },
    {
      "path": "./build/css/main.*.css",
      "maxSize": "2 kB"
    }
  ]
}
